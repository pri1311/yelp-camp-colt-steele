<% layout('layout/boilerplate') %> 
<h1>All Campgrounds</h1>
<hr>
<a class="btn btn-success" href="/campgrounds/new">Create a new campground</a>

<hr>

    <% for (let campground of campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= campground.image %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.title %></h5>
                        <hr>
                        <p class="card-text"><%= campground.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= campground.location %></small>
                        </p>
                        <a href="/campgrounds/<%= campground.id %>" class="btn btn-info">View details</a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
